{
  "name": "steamdeck-app",
  "version": "1.2.9",
  "description": "",
  "main": "index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "start": "electron .",
    "embed-dist": "node ./copy_dist.js",
    "build:win": "electron-builder --win nsis --x64",
    "build:linux": "electron-builder --linux AppImage --x64"
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "electron": "^38.3.0",
    "electron-builder": "^24.6.0"
  },
  "build": {
    "appId": "com.startifysolutions.gamepad",
    "productName": "Gamepad App",
    "publish": [
      {
        "provider": "github",
        "owner": "StartifySolutions-Johnny",
        "repo": "steamdeck-app",
        "releaseType": "release"
      }
    ],
    "directories": {
      "buildResources": "build",
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "index.js",
      "preload.js",
      "preload-updater.js",
      "updater.js",
      "updater-ui.html",
      "package.json"
    ],
    "asarUnpack": [
      "dist/**",
      "public/**"
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ]
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowToChangeInstallationDirectory": true
    },
    "linux": {
      "target": [
        "AppImage"
      ],
      "category": "Utility",
      "maintainer": "Startify Solutions",
      "artifactName": "${productName}-${version}-${arch}.${ext}"
    }
  },
  "dependencies": {
    "electron-log": "^5.4.3",
    "electron-updater": "^6.6.2",
    "say": "^0.16.0"
  }
}